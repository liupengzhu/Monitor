<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.com.larunda.monitor">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".util.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Fullscreen">
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ElectricActivity" />
        <activity android:name=".WaterActivity" />
        <activity android:name=".GasActivity" />
        <activity android:name=".SteamActivity" />
        <activity android:name=".CarbonActivity" />
        <activity android:name=".RenewableActivity" />
        <activity android:name=".CompanyListActivity" />
        <activity
            android:name=".FilterCompanyActivity"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name=".RePasswordActivity" />
        <activity android:name=".PowerActivity" />
        <activity android:name=".AlarmActivity"></activity>
    </application>

</manifest>