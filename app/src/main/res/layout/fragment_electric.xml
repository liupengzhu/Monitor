<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RadioGroup
            android:id="@+id/electric_fragment_time_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/electric_fragment_year_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/radio_button2"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="年"
                android:textColor="@color/radio_text_color" />

            <RadioButton
                android:id="@+id/electric_fragment_month_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/radio_button"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="月"
                android:textColor="@color/radio_text_color" />

            <RadioButton
                android:id="@+id/electric_fragment_day_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/radio_button3"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="日"
                android:textColor="@color/radio_text_color" />
        </RadioGroup>

        <TextView
            android:id="@+id/electric_date_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/electric_fragment_type_group"
            android:layout_toRightOf="@id/electric_fragment_time_group"
            android:background="@drawable/date_text"
            android:gravity="center"
            android:text="2018-02-04"
            android:maxLines="1"
            android:textSize="12sp" />

        <RadioGroup
            android:id="@+id/electric_fragment_type_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/electric_fragment_original_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/radio_button2"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="原始数据"
                android:textColor="@color/radio_text_color" />

            <RadioButton
                android:id="@+id/electric_fragment_fold_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/radio_button3"
                android:button="@null"
                android:gravity="center"
                android:text="等价折标"
                android:textColor="@color/radio_text_color" />
        </RadioGroup>

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_margin="20dp"
                    android:background="@color/tab_text_color1" />

                <TextView
                    android:id="@+id/electric_fragment_chart_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="2018年03月 区间用电量柱状图"
                    android:textColor="@color/tab_text_color2"
                    android:textSize="15sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">

                <cn.com.larunda.monitor.util.BarChartViewPager
                    android:id="@+id/electric_fragment_chart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"></cn.com.larunda.monitor.util.BarChartViewPager>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">

                <cn.com.larunda.monitor.util.LineChartViewPager
                    android:id="@+id/electric_fragment_line"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"></cn.com.larunda.monitor.util.LineChartViewPager>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/electric_fragment_pie_layout"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">
                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_margin="20dp"
                    android:background="@color/tab_text_color1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="当日区间用电排行占比图"
                    android:textColor="@color/tab_text_color2"
                    android:textSize="15sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">

                <cn.com.larunda.monitor.util.PieChartViewPager
                    android:id="@+id/electric_fragment_pie"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"></cn.com.larunda.monitor.util.PieChartViewPager>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/electric_fragment_recyclerView"
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>